@page "/Errors/CustomError/{StatusCode:int}"
@model WebApplication3.Pages.Errors.CustomErrorModel
@{
    ViewData["title"] = $"Error {Model.StatusCode}";
}

<div class="container" style="text-align: center; color: #888;">
    <h1 style="font-size: 150px; color: #888; margin-bottom: 0px;">@Model.StatusCode</h1>
    <p style="font-size: 50px; ">We couldn't find this page.</p>
    <p>The page you are looking either doesn't exist or some issue has occurred.</p>
    <p>Please navigate back to <a href="/">Home</a></p>

</div>